<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/id_button_group"
        />

    <RadioGroup
        android:id="@+id/id_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <RadioButton
            android:id="@+id/id_activity_main_home"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_home"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:button="@null"
            android:text="首页"/>
        <RadioButton
            android:id="@+id/id_activity_main_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_income"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="我是代言人"
            />
         <RadioButton
             android:id="@+id/id_activity_main_shopping_cart"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:drawableTop="@mipmap/ic_shopping_cart"
             android:button="@null"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:text="购物车"/>
        <RadioButton
            android:id="@+id/id_activity_main_qr_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_qr_code"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="我的二维码"/>
        <RadioButton
            android:id="@+id/id_activity_main_customer_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_customer_service"
            android:button="@null"
            android:gravity="center_horizontal"
            android:text="联系客服"/>
        </RadioGroup>
</RelativeLayout>