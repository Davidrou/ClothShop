<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品详情"/>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner_cloth_detail"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="5dp"
            android:layout_below="@+id/text_cloth_name_detail_activity"
            android:id="@+id/text_price_detail_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/holo_orange_dark"
            android:text="¥289"/>

        <TextView
            android:id="@+id/text_cloth_name_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:text="2017秋冬新款女装加厚长袖连衣裙时尚套装两件套时髦气质潮"
            android:textSize="15sp"
            android:lines="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/text_price_detail_activity" />
    </RelativeLayout>
    
    <WebView
        android:id="@+id/webview_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
</ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
    <Button
        android:id="@+id/button_buy_now"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentRight="true"
        android:text="立即购买"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:layout_toLeftOf="@+id/button_buy_now"
        android:text="加入购物车"
        android:id="@+id/button" />
    </RelativeLayout>
</FrameLayout>